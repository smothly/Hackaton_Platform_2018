<script>
function category_filter(category_name){
  var category_list = document.getElementsByClassName("dong-li-category");
  for (i = 0; i < category_list.length; i++) {
    if (category_list[i].innerHTML.indexOf(category_name) > -1) {
      category_list[i].parentElement.parentElement.style.display = "";
    } else {
      category_list[i].parentElement.parentElement.style.display = "none";
    }
  }
}
</script>  

