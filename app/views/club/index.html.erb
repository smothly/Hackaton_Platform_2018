            <div class="carousel-item active">
              <%=image_tag("Carouselimage1.jpg")%>
            </div>
            <div class="carousel-item">
              <%=image_tag("Carouselimage2.jpg")%>
            </div>
            <div class="carousel-item">
              <%=image_tag("carouselimage3.jpg")%>
            </div>
          </div>
        
          <!-- 좌우 화살표 -->
          <a class="carousel-control-prev" href="#dongari-car" data-slide="prev">
